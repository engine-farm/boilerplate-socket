{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outFile": "./build/game.js",
    "baseUrl": "./",
    "incremental": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@engine-farm/sdk-types": [
        "../game/src/index.ts" //@todo: remove on publish repo
      ]
    }
  },
  "lib": [
    "dom",
    "es5",
    "es2016"
  ],
  // "include": [
  //   "src/framework"
  // ],
  "exclude": [
    "node_modules",
    "dist",
    "src/loadtest",
    "src/test"
  ]
}
